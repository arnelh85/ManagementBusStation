@model ManagementBusStation.Models.TicketSale

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal col-xs-10 col-xs-pull-2 col-xs-offset-5">
    <h2 style="margin-top:150px;margin-left:40px;font-family:Helvetica;color:#19941D;">REZERVACIJA AUTOBUSKIH KARTI</h2>
    <br />
    <br />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label col-xs-2", @style = "font-family:Helvetica;color:#19941D;" })
        <div class="col-xs-10">
            @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control", @style = "border:1px solid #19941D;border-radius:3px;color:#111212;" } })
            @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CustomerAge, htmlAttributes: new { @class = "control-label col-xs-2", @style = "font-family:Helvetica;color:#19941D;" })
        <div class="col-xs-10">
            @Html.EditorFor(model => model.CustomerAge, new { htmlAttributes = new { @class = "form-control", @style = "border:1px solid #19941D;border-radius:3px;color:#111212;" } })
            @Html.ValidationMessageFor(model => model.CustomerAge, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Currency, htmlAttributes: new { @class = "control-label col-xs-2", @style = "font-family:Helvetica;color:#19941D;" })
        <div class="col-xs-10">
            @Html.DropDownList("Currency", new List<SelectListItem> { new SelectListItem { Text = "BiH KONVERTIBILNA MARKA", Value = "BAM" },
                                                                      new SelectListItem { Text = "SRBIJANSKI DINAR", Value = "RSD" },
                                                                      new SelectListItem { Text = "EURO", Value = "EUR" } }, "Odaberi valutu :",
                                                                      new { @style = "margin-top:6px;border:1px solid #19941D;border-radius:3px;font-family:Helvetica;color:#111212;" })
            @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TicketPrice, htmlAttributes: new { @class = "control-label col-xs-2", @style = "font-family:Helvetica;color:#19941D;" })
        <div class="col-xs-10">
            @Html.EditorFor(model => model.TicketPrice, new { htmlAttributes = new { @class = "form-control", @style = "border:1px solid #19941D;border-radius:3px;color:#111212;" } })
            @Html.ValidationMessageFor(model => model.TicketPrice, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Discount, htmlAttributes: new { @class = "control-label col-xs-2", @style = "font-family:Helvetica;color:#19941D;" })
        <div class="col-xs-10">
            @Html.DropDownList("Discount", new List<SelectListItem> { new SelectListItem { Text = "STUDENTI", Value = "25" },
                                                                      new SelectListItem { Text = "PENZIONERI", Value = "50" },
                                                                      new SelectListItem { Text = "OSTALE KATEGORIJE", Value = "0" } }, "Odaberi popust :",
                                                                      new { @style = "margin-top:6px;border:1px solid #19941D;border-radius:3px;font-family:Helvetica;color:#111212;" })
            @Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EmployeeId, "ID zaposlenika", htmlAttributes: new { @class = "control-label col-xs-2", @style = "font-family:Helvetica;color:#19941D;" })
        <div class="col-xs-10">
            @Html.DropDownList("EmployeeId", null, htmlAttributes: new { @class = "form-control", @style = "border:1px solid #19941D;border-radius:3px;color:#111212;" })
            @Html.ValidationMessageFor(model => model.EmployeeId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-10 col-xs-push-3">
            <input type="submit" value="Dodaj" class="btn btn-lg btn-success" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}