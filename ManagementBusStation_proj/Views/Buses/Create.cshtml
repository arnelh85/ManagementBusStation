@model ManagementBusStation.Models.Bus

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-xs-10 col-xs-pull-2 col-xs-offset-5">
        <h2 style="margin-top:200px;margin-left:112px;font-family:Helvetica;color:#19941D;">REZERVACIJA AUTOBUSA</h2>
        <br />
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.BusCompany, htmlAttributes: new { @class = "control-label col-xs-2", @style = "font-family:Helvetica;color:#19941D;" })                    
            <div class="col-xs-10">
                @Html.EditorFor(model => model.BusCompany, new { htmlAttributes = new { @class = "form-control", @style = "border:1px solid #19941D;border-radius:3px;color:#111212;" } })
                @Html.ValidationMessageFor(model => model.BusCompany, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SeatCapacity, htmlAttributes: new { @class = "control-label col-xs-2", @style = "font-family:Helvetica;color:#19941D;" })
            <div class="col-xs-10">
                @Html.EditorFor(model => model.SeatCapacity, new { htmlAttributes = new { @class = "form-control", @style = "border:1px solid #19941D;border-radius:3px;color:#111212;" } })
                @Html.ValidationMessageFor(model => model.SeatCapacity, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-10 col-xs-push-3">
                <input type="submit" value="Dodaj" class="btn btn-lg btn-success" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")  
}