@model IEnumerable<ManagementBusStation.Models.BusLine>

@{
    ViewBag.Title = "GetArrivalsNotifications";
}

<div>
    <h2 style="margin-top:100px;margin-left:300px;font-family:Helvetica;color:#111212;">OBAVIJESTI O DOLASCIMA AUTOBUSA</h2>
    <br />
    <br />
</div>

<table class="table table-bordered table-responsive">
    <tr style="border:3px solid #03A9FC;">
        <th style="border:3px solid #03A9FC;" class="text-center text-uppercase">
            @Html.DisplayNameFor(model => model.CityOfDeparture)
        </th>
        <th style="border:3px solid #03A9FC;" class="text-center text-uppercase">
            @Html.DisplayNameFor(model => model.CityOfArrival)
        </th>
        <th style="border:3px solid #03A9FC;" class="text-center text-uppercase">
            @Html.DisplayNameFor(model => model.TimeOfDeparture)
        </th>
        <th style="border:3px solid #03A9FC;" class="text-center text-uppercase">
            @Html.DisplayNameFor(model => model.TimeOfArrival)
        </th>
        <th class="text-center text-uppercase">
            @Html.DisplayNameFor(model => model.Bus.BusCompany)
        </th>       
    </tr>

@foreach (var item in Model) {
    <tr style="border:2px solid #03A9FC;">
        <td style="border:2px solid #03A9FC;" class="text-center">
            @Html.DisplayFor(modelItem => item.CityOfDeparture)
        </td>
        <td style="border:2px solid #03A9FC;" class="text-center">
            @Html.DisplayFor(modelItem => item.CityOfArrival)
        </td>
        <td style="border:2px solid #03A9FC;" class="text-center">
            @Html.DisplayFor(modelItem => item.TimeOfDeparture)
        </td>
        <td style="border:2px solid #03A9FC;" class="text-center">
            @Html.DisplayFor(modelItem => item.TimeOfArrival)
        </td>
        <td class="text-center">
            @Html.DisplayFor(modelItem => item.Bus.BusCompany)
        </td>       
    </tr>
}
</table>